<Window x:Class="RyCookieText.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RyCookie Text" 
        Height="400" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Window.Resources>
        <!-- Rotation Animation -->
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="CookieRotate"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360"
                           Duration="0:0:3"/>
        </Storyboard>
        
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           Duration="0:0:0.5"/>
        </Storyboard>
        
        <!-- Pulse Animation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="CookieScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.1" Duration="0:0:1"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="CookieScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.1" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>
    
    <Border x:Name="MainBorder" 
            Background="#1E1E1E" 
            CornerRadius="12"
            BorderBrush="#007ACC"
            BorderThickness="2"
            Opacity="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Cookie Logo -->
            <Viewbox Grid.Row="0" Width="200" Height="200" Margin="0,40,0,0">
                <Grid>
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="CookieScale" ScaleX="1" ScaleY="1"/>
                            <RotateTransform x:Name="CookieRotate" Angle="0" CenterX="128" CenterY="128"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    
                    <Image Source="/Resources/cookie_logo.png" 
                           Width="256" Height="256"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </Viewbox>
            
            <!-- App Name -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="RyCookie Text" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Text Expander for Windows" 
                          FontSize="14"
                          Foreground="#A0A0A0"
                          HorizontalAlignment="Center"
                          Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Loading Indicator -->
            <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText"
                          Text="Loading..." 
                          FontSize="14"
                          Foreground="#007ACC"
                          HorizontalAlignment="Center"/>
                
                <!-- Progress Bar -->
                <ProgressBar x:Name="LoadingProgress"
                            Width="200"
                            Height="4"
                            Margin="0,8,0,0"
                            IsIndeterminate="True"
                            Foreground="#007ACC"
                            Background="#3F3F46"
                            BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
